<div class="todo-list">
  <h1>Works </h1>
  <div class="addTask">
    <label>Due:</label>
    {{!-- template-lint-disable self-closing-void-elements --}}
    <input
      type="text"
      name="dueAdd"
      id="dueAdd"
      oninput={{action "dueInputValue"}}
    />
    <label>Task description:</label>
    <input
      type="text"
      name="descriptionAdd"
      id="descriptionAdd"
      oninput={{action "descriptionInputValue"}}
    />
    <button type="submit" class="btn btn-light" onclick={{action "addBtn"}}>Add</button>
  </div>
  <div class="user">
    <div>
      <button type="button" class="btn btn-primary">All</button>
      <button type="button" class="btn btn-primary">Complete</button>
      <button type="button" class="btn btn-primary">Incomplete</button>
    </div>

  </div>
  {{!-- template-lint-disable no-inline-styles --}}
  <div class="table-content">
    <div class="list-group">
      {{#each userData as |user index|}}
        <div class="row">
          <div class="list-group-item col-md-8" style="text-align: left;">
            {{!-- template-lint-disable self-closing-void-elements --}}
            <input type="checkbox" />
            {{index}}:
            {{user.description}}
            <span class="deadline pull-right"><strong>Due:</strong>{{user.due}}</span>
          </div>
          <div class="col-md-4">
            <button class="btn btn-light" type="button">
              <i id="edit"  class="fa fa-pencil-square-o" >Edit</i>
            </button>
            <button
              class="btn btn-danger"
              type="button"
              onclick={{action "removeBtn" user.description}}>
              <i id="del" class="fa fa-trash-o"></i>Remove
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="edit">
    <div>
      <h3 class="editHead">Edit Task {{userData.length}}</h3>
      <label for="dueEdit">Due:</label>
      {{!-- template-lint-disable self-closing-void-elements --}}
      <input type="text" name="dueEdit" id="dueEdit" />
      <label for="descriptionEdit">Task description:</label>
      <input type="text" name="descriptionEdit" id="descriptionEdit" />
      <button type="button" class="btn btn-primary">Save</button>
    </div>
    {{!-- template-lint-disable self-closing-void-elements --}}
    <div><img src="../assets/images/zoey.png" alt="zoey" /></div>
  </div>

</div>